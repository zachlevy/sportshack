= form_for @roster do |f|
  - if @roster.errors.any?
    #error_explanation
      %h2= "#{pluralize(@roster.errors.count, "error")} prohibited this roster from being saved:"
      %ul
        - @roster.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :stats_inc_id
    = f.number_field :stats_inc_id
  .field
    = f.label :team_id
    = f.number_field :team_id
  .field
    = f.label :playerstats_id
    = f.number_field :playerstats_id
  .field
    = f.label :first
    = f.text_field :first
  .field
    = f.label :last
    = f.text_field :last
  .field
    = f.label :num
    = f.number_field :num
  .field
    = f.label :pos
    = f.number_field :pos
  .field
    = f.label :import_status
    = f.number_field :import_status
  .field
    = f.label :height
    = f.text_field :height
  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :birthdate
    = f.date_select :birthdate
  .field
    = f.label :birthplace
    = f.text_field :birthplace
  .field
    = f.label :college
    = f.text_field :college
  .field
    = f.label :yrsteam
    = f.number_field :yrsteam
  .field
    = f.label :yrsleague
    = f.number_field :yrsleague
  .field
    = f.label :ros_status
    = f.number_field :ros_status
  .actions
    = f.submit 'Save'
