= form_for @rivalry do |f|
  - if @rivalry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rivalry.errors.count, "error")} prohibited this rivalry from being saved:"
      %ul
        - @rivalry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :away_team
    = f.text_field :away_team
  .field
    = f.label :home_team
    = f.text_field :home_team
  .field
    = f.label :away_player
    = f.text_field :away_player
  .field
    = f.label :home_player
    = f.text_field :home_player
  .actions
    = f.submit 'Save'
